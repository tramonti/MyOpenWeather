<?xml version="2.0" encoding="UTF-8"?>
<project name="myopenweather" default="all">
  
  
  <property file="myopenweather.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module MyOpenWeather -->
  
  <dirname property="module.myopenweather.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.myopenweather" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.myopenweather" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.myopenweather" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.myopenweather" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="myopenweather.output.dir" value="${module.myopenweather.basedir}/out/production/MyOpenWeather"/>
  <property name="myopenweather.testoutput.dir" value="${module.myopenweather.basedir}/out/test/MyOpenWeather"/>
  
  <path id="myopenweather.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="myopenweather.module.production.classpath">
    <path refid="${module.jdk.classpath.myopenweather}"/>
    <pathelement location="${basedir}/../../Java/OWM-JSON-helper-1.1-SNAPSHOT-x86.jar"/>
    <pathelement location="${basedir}/../../Java/gson-2.2.4.jar"/>
  </path>
  
  <path id="myopenweather.runtime.production.module.classpath">
    <pathelement location="${myopenweather.output.dir}"/>
    <pathelement location="${basedir}/../../Java/OWM-JSON-helper-1.1-SNAPSHOT-x86.jar"/>
    <pathelement location="${basedir}/../../Java/gson-2.2.4.jar"/>
  </path>
  
  <path id="myopenweather.module.classpath">
    <path refid="${module.jdk.classpath.myopenweather}"/>
    <pathelement location="${myopenweather.output.dir}"/>
    <pathelement location="${basedir}/../../Java/OWM-JSON-helper-1.1-SNAPSHOT-x86.jar"/>
    <pathelement location="${basedir}/../../Java/gson-2.2.4.jar"/>
  </path>
  
  <path id="myopenweather.runtime.module.classpath">
    <pathelement location="${myopenweather.testoutput.dir}"/>
    <pathelement location="${myopenweather.output.dir}"/>
    <pathelement location="${basedir}/../../Java/OWM-JSON-helper-1.1-SNAPSHOT-x86.jar"/>
    <pathelement location="${basedir}/../../Java/gson-2.2.4.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.myopenweather">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.myopenweather">
    <patternset refid="excluded.from.module.myopenweather"/>
  </patternset>
  
  <path id="myopenweather.module.sourcepath">
    <dirset dir="${module.myopenweather.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.myopenweather" depends="compile.module.myopenweather.production,compile.module.myopenweather.tests" description="Compile module MyOpenWeather"/>
  
  <target name="compile.module.myopenweather.production" depends="register.custom.compilers" description="Compile module MyOpenWeather; production classes">
    <mkdir dir="${myopenweather.output.dir}"/>
    <javac2 destdir="${myopenweather.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.myopenweather}/javac">
      <compilerarg line="${compiler.args.myopenweather}"/>
      <bootclasspath refid="myopenweather.module.bootclasspath"/>
      <classpath refid="myopenweather.module.production.classpath"/>
      <src refid="myopenweather.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.myopenweather"/>
    </javac2>
    
    <copy todir="${myopenweather.output.dir}">
      <fileset dir="${module.myopenweather.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.myopenweather.tests" depends="register.custom.compilers,compile.module.myopenweather.production" description="compile module MyOpenWeather; test classes" unless="skip.tests"/>
  
  <target name="clean.module.myopenweather" description="cleanup module">
    <delete dir="${myopenweather.output.dir}"/>
    <delete dir="${myopenweather.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.myopenweather, clean.artifact.myopenweather" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.myopenweather" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.myopenweather" value="${basedir}/out/artifacts/MyOpenWeather"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.MyOpenWeather" value="${artifacts.temp.dir}/MyOpenWeather.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.1.8}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.myopenweather" description="clean MyOpenWeather artifact output">
    <delete dir="${artifact.output.myopenweather}"/>
  </target>
  
  <target name="artifact.myopenweather" depends="init.artifacts, compile.module.myopenweather" description="Build &#39;MyOpenWeather&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.myopenweather}"/>
    <copy todir="${artifact.temp.output.MyOpenWeather}">
      <fileset dir="${myopenweather.output.dir}"/>
    </copy>
    <copy file="${basedir}/../../Java/OWM-JSON-helper-1.1-SNAPSHOT.jar" tofile="${artifact.temp.output.MyOpenWeather}/OWM-JSON-helper-1.1-SNAPSHOT.jar"/>
    <copy file="${basedir}/../../Java/gson-2.2.4.jar" tofile="${artifact.temp.output.MyOpenWeather}/gson-2.2.4.jar"/>
    <fx:fileset id="all_but_MyOpenWeather" dir="${artifact.temp.output.MyOpenWeather}" includes="**/*.jar">
      <exclude name="MyOpenWeather.jar"/>
    </fx:fileset>
    <fx:fileset id="all_MyOpenWeather" dir="${artifact.temp.output.MyOpenWeather}" includes="**/*.jar"/>
    <fx:application id="MyOpenWeather_id" name="MyOpenWeather" mainClass="app.MainApp"/>
    <fx:jar destfile="${artifact.temp.output.MyOpenWeather}/MyOpenWeather.jar">
      <fx:application refid="MyOpenWeather_id"/>
      <fileset dir="${artifact.temp.output.MyOpenWeather}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_MyOpenWeather"/>
      </fx:resources>
      <manifest/>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.MyOpenWeather}/deploy" outfile="MyOpenWeather" nativeBundles="deb">
      <fx:application refid="MyOpenWeather_id"/>
      <fx:info title="My Open Weather" vendor="olesia.serban.com" description="It is created for Ubuntu x64
App uses info from Open Weather Map"/>
      <fx:resources>
        <fx:fileset refid="all_MyOpenWeather"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.myopenweather}">
      <fileset dir="${artifact.temp.output.MyOpenWeather}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.MyOpenWeather}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.myopenweather" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>